@model System.Data.DataTable

@{
    ViewData["Title"] = "Manage Time Slots";
}

<h2 class="mb-3">Manage Time Slots</h2>

<a asp-controller="Admin"
   asp-action="AddTimeSlot"
   class="btn btn-primary mb-3">
    + Add New Time Slot
</a>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

<table class="table table-bordered table-striped">

    <thead class="table-dark">
        <tr>
            <th>Service</th>
            <th>Date</th>
            <th>Start Time</th>
            <th>End Time</th>
            <th>Available</th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody>

        @foreach (System.Data.DataRow row in Model.Rows)
        {
            <tr>

                <td>@row["ServiceName"]</td>

                <td>
                    @Convert.ToDateTime(row["SlotDate"])
                    .ToString("dd-MM-yyyy")
                </td>

                <td>@row["StartTime"]</td>

                <td>@row["EndTime"]</td>

                <td>
                    @(
                                    Convert.ToBoolean(row["IsAvailable"])
                                    ? "Yes" : "No"
                                    )
                </td>

                <td>
                    <a asp-controller="Admin"
                       asp-action="ToggleSlot"
                       asp-route-id="@row["SlotId"]"
                       class="btn btn-sm btn-warning">

                        @(Convert.ToBoolean(row["IsAvailable"])
                                            ? "Disable" : "Enable")
                </a>
            </td>

            </tr>
                }

    </tbody>
</table>
