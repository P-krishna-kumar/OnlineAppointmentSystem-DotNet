<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"] - Appointment System</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        .navbar {
            background: linear-gradient(45deg, #4b6cb7, #182848);
        }

        .navbar-brand, .nav-link {
            color: white !important;
            font-weight: 600;
        }

        footer {
            margin-top: 50px;
            padding: 20px;
            background: #182848;
            color: white;
            text-align: center;
        }

        .hero {
            padding: 120px 0;
            background: linear-gradient(135deg, #4b6cb7, #182848);
            color: white;
            text-align: center;
        }
    </style>
</head>

<body>
    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg shadow">
        <div class="container">
            <a class="navbar-brand" href="/">Online Appointment</a>

            <button class="navbar-toggler bg-light" type="button" data-bs-toggle="collapse" data-bs-target="#nav">
                ☰
            </button>

            <div class="collapse navbar-collapse" id="nav">
                <ul class="navbar-nav ms-auto">

                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/Home/About">About</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/Appointment/Create">Book Appointment</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/Account/Login">User Login</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/Account/AdminLogin">Admin Login</a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer>
        © @DateTime.Now.Year Online Appointment System
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
