<h2>Book Appointment (AJAX)</h2>

<div class="card p-4 shadow">

    <div class="form-group">
        <label>Service</label>
        <select class="form-control" id="ServiceId">
            <option value="">--Select--</option>

            @foreach (System.Data.DataRow row in ViewBag.Services.Rows)
            {
                <option value="@row["ServiceId"]">@row["ServiceName"]</option>
            }
        </select>
    </div>

    <div class="form-group mt-3">
        <label>Time Slot</label>
        <select class="form-control" id="TimeSlotId">
            <option value="">--Select--</option>

            @foreach (System.Data.DataRow row in ViewBag.TimeSlots.Rows)
            {
                <option value="@row["TimeSlotId"]">@row["SlotFrom"] - @row["SlotTo"]</option>
            }
        </select>
    </div>

    <div class="form-group mt-3">
        <label>Date</label>
        <input type="date" class="form-control" id="AppointmentDate" />
    </div>

    <button class="btn btn-success mt-4" id="btnBook">Book Appointment</button>
    <button class="btn btn-success mt-4" id="btnPay">Pay & Confirm Appointment</button>

    <div id="msg" class="mt-3"></div>
</div>

<script src="~/js/appointment.js"></script>
<script src="https://checkout.razorpay.com/v1/checkout.js"></script>
<script src="~/js/payment.js"></script>
