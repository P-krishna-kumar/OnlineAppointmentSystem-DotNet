@model Online_Appointment_System.Models.Appointment

<h2>Book Appointment</h2>

<form method="post">

    <div class="form-group">
        <label>Select Service</label>
        <select class="form-control" asp-for="ServiceId" required>
            <option value="">--Select--</option>

            @foreach (System.Data.DataRow row in ViewBag.Services.Rows)
            {
                <option value="@row["ServiceId"]">@row["ServiceName"]</option>
            }
        </select>
    </div>

    <div class="form-group mt-3">
        <label>Select Time Slot</label>
        <select class="form-control" asp-for="TimeSlotId" required>
            <option value="">--Select--</option>

            @foreach (System.Data.DataRow row in ViewBag.TimeSlots.Rows)
            {
                <option value="@row["TimeSlotId"]">
                    @row["SlotFrom"] - @row["SlotTo"]
                </option>
            }
        </select>
    </div>

    <div class="form-group mt-3">
        <label>Select Date</label>
        <input type="date" class="form-control" asp-for="AppointmentDate" required />
    </div>

    <button class="btn btn-success mt-4">Book Appointment</button>

</form>
