@model Online_Appointment_System.Models.Service

<h2 class="text-primary mb-4">Add Service</h2>

<form asp-action="AddService" method="post">
    <div class="form-group mb-3">
        <label asp-for="ServiceName"></label>
        <input type="text" class="form-control" asp-for="ServiceName" required />
        <span class="text-danger" asp-validation-for="ServiceName"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Description"></label>
        <textarea class="form-control" asp-for="Description"></textarea>
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Price"></label>
        <input type="number" class="form-control" asp-for="Price" required />
        <span class="text-danger" asp-validation-for="Price"></span>
    </div>

    <button class="btn btn-success">Save</button>
</form>
