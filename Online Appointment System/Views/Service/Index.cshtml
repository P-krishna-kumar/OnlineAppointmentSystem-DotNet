@model IEnumerable<Online_Appointment_System.Models.Service>

@{
    ViewBag.Title = "Services";
}

<h2>Services</h2>

<a class="btn btn-primary mb-3" href="@Url.Action("Create")">Add New Service</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var service in Model)
        {
            <tr>
                <td>@service.ServiceID</td>
                <td>@service.ServiceName</td>
                <td>@service.Description</td>
                <td>
                    <a class="btn btn-sm btn-success" href="@Url.Action("Edit", new { id = service.ServiceID })">Edit</a>
                    <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", new { id = service.ServiceID })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
