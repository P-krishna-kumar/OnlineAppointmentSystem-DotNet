@model Online_Appointment_System.Models.TimeSlot

<h2>Edit Time Slot</h2>

<form method="post">
    <input type="hidden" asp-for="TimeSlotId" />

    <div class="form-group">
        <label>From</label>
        <input type="time" class="form-control" asp-for="SlotFrom" required />
    </div>

    <div class="form-group mt-3">
        <label>To</label>
        <input type="time" class="form-control" asp-for="SlotTo" required />
    </div>

    <button class="btn btn-primary mt-3">Update</button>
</form>
