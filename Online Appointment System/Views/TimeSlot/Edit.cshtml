@model Online_Appointment_System.Models.Appointment

@{
    ViewBag.Title = "Edit Appointment";

    var users = ViewBag.Users as List<Online_Appointment_System.Models.User>;
    var services = ViewBag.Services as List<Online_Appointment_System.Models.Service>;
    var slots = ViewBag.TimeSlots as List<Online_Appointment_System.Models.TimeSlot>;
}

<h2>Edit Appointment</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="AppointmentID" />

    <!-- Users Dropdown -->
    <div class="mb-3">
        <label class="form-label">Select User</label>
        <select asp-for="UserID" class="form-select" required>
            @foreach (var u in users)
            {
                <option value="@u.UserID" selected="@(u.UserID == Model.UserID ? "selected" : null)">
                    @u.Name
                </option>
            }
        </select>
    </div>

    <!-- Services Dropdown -->
    <div class="mb-3">
        <label class="form-label">Select Service</label>
        <select asp-for="ServiceID" class="form-select" required>
            @foreach (var s in services)
            {
                <option value="@s.ServiceID" selected="@(s.ServiceID == Model.ServiceID ? "selected" : null)">
                    @s.ServiceName
                </option>
            }
        </select>
    </div>

    <!-- TimeSlots Dropdown -->
    <div class="mb-3">
        <label class="form-label">Select Time Slot</label>
        <select asp-for="SlotID" class="form-select" required>
            @foreach (var t in slots)
            {
                <option value="@t.SlotID" selected="@(t.SlotID == Model.SlotID ? "selected" : null)">
                    @t.SlotDate.ToShortDateString() | @t.StartTime - @t.EndTime | @t.Service?.ServiceName
                </option>
            }
        </select>
    </div>

    <!-- Status Dropdown -->
    <div class="mb-3">
        <label asp-for="Status" class="form-label"></label>
        <select asp-for="Status" class="form-select">
            <option value="Pending" selected="@(Model.Status == "Pending" ? "selected" : null)">Pending</option>
            <option value="Confirmed" selected="@(Model.Status == "Confirmed" ? "selected" : null)">Confirmed</option>
            <option value="Cancelled" selected="@(Model.Status == "Cancelled" ? "selected" : null)">Cancelled</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a class="btn btn-secondary" href="@Url.Action("Index")">Cancel</a>
</form>
