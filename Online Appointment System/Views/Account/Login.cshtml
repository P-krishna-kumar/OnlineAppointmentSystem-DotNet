<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg border-0 rounded-4 p-4" style="max-width:420px;width:100%;">

        <h3 class="text-center fw-bold mb-4 text-primary">
            User Login
        </h3>

        <form method="post">

            <!-- Email -->
            <div class="form-group mb-3">
                <label class="form-label fw-semibold">Email Address</label>
                <input type="email"
                       name="Email"
                       class="form-control form-control-lg rounded-3"
                       placeholder="Enter your email"
                       required />
            </div>

            <!-- Password -->
            <div class="form-group mb-3">
                <label class="form-label fw-semibold">Password</label>
                <input type="password"
                       name="Password"
                       class="form-control form-control-lg rounded-3"
                       placeholder="Enter your password"
                       required />
            </div>

            <!-- Button -->
            <button class="btn btn-primary btn-lg w-100 rounded-3 shadow-sm mt-3">
                Login
            </button>

            <!-- Error -->
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger text-center mt-3 py-2">
                    @ViewBag.Error
                </div>
            }

        </form>

    </div>
</div>
