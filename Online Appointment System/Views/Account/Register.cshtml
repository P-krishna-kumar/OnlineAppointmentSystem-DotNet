@model Online_Appointment_System.Models.User

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-success text-white text-center py-3 rounded-top-4">
                    <h3 class="mb-0 fw-bold">User Registration</h3>
                    <small>Create your account in seconds</small>
                </div>

                <div class="card-body p-4">
                    <form method="post">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="fullName" asp-for="FullName" placeholder="John Doe" required />
                            <label for="fullName text-muted">Full Name</label>
                        </div>

                        <div class="form-floating mb-3">
                            <input type="email" class="form-control" id="email" asp-for="Email" placeholder="name@example.com" required />
                            <label for="email">Email Address</label>
                        </div>

                        <div class="form-floating mb-3">
                            <input type="password" class="form-control" id="password" asp-for="Password" placeholder="Password" required />
                            <label for="password">Password</label>
                        </div>

                        <div class="form-floating mb-4">
                            <input type="text" class="form-control" id="mobile" asp-for="Mobile" placeholder="9876543210" required />
                            <label for="mobile">Mobile Number</label>
                        </div>

                        <div class="d-grid">
                            <button class="btn btn-success btn-lg shadow-sm rounded-3 fw-bold">
                                Register Now
                            </button>
                        </div>
                    </form>
                </div>

                <div class="card-footer text-center py-3 bg-light rounded-bottom-4">
                    <p class="mb-0 small text-muted">Already have an account? <a href="/Login" class="text-success fw-bold text-decoration-none">Login here</a></p>
                </div>
            </div>
        </div>
    </div>
</div>